<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OQUR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/secondaryWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/backColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="HeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondaryWhite</item>
    </style>


    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/backColor</item>
        <item name="android:colorControlNormal">@color/secondaryGrey</item>
    </style>

</resources>